#include <iostream>
#include <math.h>
#include <stdio.h>

using namespace std;

int main()
{
    float d;
    int x;
    float n;
    float z,o;
    scanf("%i",&x);
    for(int i=0; i<x; i++)
    {
        scanf("%f %f %f",&n,&z,&o);
        d=fabs((((n+z)/o)-z)/(1-(1/o)))*12;
        printf("%.0f\n",d);
    }
    return 0;
}
