//  2015-02-09 16:16:31

#include<iostream>

using namespace std;

int main()
{
    unsigned long long int q,z;
    int x;
    int a,b;
    cin>>x;
    for(int i=0; i<x; i++)
    {
        q=1;
        z=1;
        cin>>a>>b;
        if(a==1)
        {
            cout<<b<<endl;
        }
        else
        {
            for(int i=0; i<a; i++)
            {
                q*=b;
            }
            for(int i=0; i<a-1; i++)
            {
                z*=b;
            }
            cout<<q-z<<endl;
        }
    }
    return 0;
}
