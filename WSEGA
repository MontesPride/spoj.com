//  2015-02-06 13:46:46

#include <iostream>

using namespace std;

int main()
{
    int x;
    int a,b,suma=0;
    cin>>x;
    for(int i=0;i<x;i++)
    {
        cin>>a;
        suma=suma+a;
        for(int j=0;j<a;j++)
        {
            cin>>b;
            suma=suma+b;
        }
        cout<<suma-1<<endl;
        suma=0;
    }
    return 0;
}
